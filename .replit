modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Home Assistant"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Publish to GitHub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check GitHub Publish Status"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check GitHub Token and Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Verify and Push to GitHub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create GitHub Repository"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Push to GitHub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Push HACS changes"

[[workflows.workflow]]
name = "Start Home Assistant"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "hass -c . --debug"
waitForPort = 8123

[[workflows.workflow]]
name = "Publish to GitHub"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

git remote set-url origin https://${GITHUB_TOKEN}@github.com/hkhard/TibberP1Integration.git
git add .
git commit -m \"Initial commit: Add project files\"
git push -u origin main
"""

[[workflows.workflow]]
name = "Check GitHub Publish Status"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git status && git log -1"

[[workflows.workflow]]
name = "Check GitHub Token and Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

echo \"Checking GitHub token...\"
if [ -n \"$GITHUB_TOKEN\" ]; then
  echo \"GitHub token is set\"
  git config --global user.email \"tibber.p1.integration@example.com\"
  git config --global user.name \"Tibber P1 Integration\"
  git remote set-url origin https://${GITHUB_TOKEN}@github.com/hkhard/TibberP1Integration.git
  git add .
  git commit -m \"Initial commit: Add project files\"
  git push -u origin main
else
  echo \"GitHub token is not set\"
fi
"""

[[workflows.workflow]]
name = "Verify and Push to GitHub"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

echo \"Checking GitHub token...\"
if [ -n \"$GITHUB_TOKEN\" ]; then
  echo \"GitHub token is set\"
  git config --global user.email \"tibber.p1.integration@example.com\"
  git config --global user.name \"Tibber P1 Integration\"
  git remote -v
  git remote set-url origin https://${GITHUB_TOKEN}@github.com/hkhard/TibberP1Integration.git
  git remote -v
  git add .
  git status
  git commit -m \"Initial commit: Add project files\"
  git push -u origin main -v
else
  echo \"GitHub token is not set\"
fi
"""

[[workflows.workflow]]
name = "Create GitHub Repository"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

curl -H \"Authorization: token ${GITHUB_TOKEN}\"      -d '{\"name\": \"TibberP1Integration\", \"description\": \"ESP8266 P1 meter integration to update Tibber API via Home Assistant custom component\", \"private\": false}'      https://api.github.com/user/repos
"""

[[workflows.workflow]]
name = "Push to GitHub"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

git config --global user.email \"tibber.p1.integration@example.com\"
git config --global user.name \"Tibber P1 Integration\"
git remote set-url origin https://${GITHUB_TOKEN}@github.com/hkhard/TibberP1Integration.git
git add .
git commit -m \"Initial commit: Add project files\"
git push -u origin main
"""

[[workflows.workflow]]
name = "Push HACS changes"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

git config --global user.email \"tibber.p1.integration@example.com\"
git config --global user.name \"Tibber P1 Integration\"
git add .
git commit -m \"Make repository HACS compatible\"
git push origin main
"""

[deployment]
run = ["sh", "-c", "hass -c . --debug"]
